{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "baseUrl": ".",
    "sourceRoot": "./src",
    "paths": {
      "src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "module": "commonjs"
  },
  "include": [
    "jest.config.ts",
    "src/**/*.ts",
    "__test__/**/*.test.ts",
    "**/*.test.ts"
  ]
}
