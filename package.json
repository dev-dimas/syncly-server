{
  "name": "syncly-server",
  "version": "1.0.0",
  "description": "Backend server for the Syncly web app",
  "author": "Dimas Maulana",
  "license": "ISC",
  "private": false,
  "main": "./dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node swc-watch.js",
    "build": "swc src -d dist --strip-leading-paths",
    "start": "npm run build && cross-env NODE_ENV=production node --trace-warnings ./dist/index.js",
    "lint": "eslint src/**/*.ts __test__/**/*.test.ts",
    "lint:fix": "eslint --fix --ext .",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:format:file": "prettier --write ",
    "test": "jest",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "argon2": "^0.30.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.0.3",
    "eslint": "^8.35.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "sharp": "^0.33.5",
    "utility-types": "^3.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "chokidar": "^3.5.1",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nodemon": "^3.1.7",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "prisma": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.0.5",
    "typescript": "5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-dimas/syncly"
  },
  "bugs": {
    "url": "https://github.com/dev-dimas/syncly/issues"
  },
  "homepage": "https://github.com/dev-dimas/syncly",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
